<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="4dp"
    android:backgroundTint="#E0DDDF">

    <!-- Parent layout inside the CardView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title for this card (like President or Vice President) -->
        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="President"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:paddingBottom="16dp" />

        <!-- Layout for candidate 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <!-- Image for candidate 1 -->
            <ImageView
                android:id="@+id/candidate_image_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_account"
                android:scaleType="centerCrop" />

            <!-- Candidate 1 Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Candidate 1 Name -->
                <TextView
                    android:id="@+id/candidate_name_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Candidate Name 1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Candidate 1 Vote Count -->
                <TextView
                    android:id="@+id/candidate_votes_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <!-- Layout for candidate 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <!-- Image for candidate 2 -->
            <ImageView
                android:id="@+id/candidate_image_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_account"
                android:scaleType="centerCrop" />

            <!-- Candidate 2 Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Candidate 2 Name -->
                <TextView
                    android:id="@+id/candidate_name_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Candidate Name 2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Candidate 2 Vote Count -->
                <TextView
                    android:id="@+id/candidate_votes_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="98"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingRight="10dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
