<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendRequest">
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/reqaction"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/action"
        android:textStyle="italic"
        android:text="Candidacy Request"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        tools:ignore="MissingConstraints,MissingConstraints"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/reqaction"
        android:paddingBottom="30dp"
        android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/uploadimg"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="30dp"
        android:src="@drawable/upload"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uploadimg"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"/>
        <EditText
            android:id="@+id/reqname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/text_layout"
            android:textSize="18sp"
            android:hint="xyz"
            android:textColorHint="@color/hint"
            android:textColor="@color/black"
            android:padding="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"/>
        <EditText
            android:id="@+id/reqemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/text_layout"
            android:textSize="18sp"
            android:hint="xyz@gmail.com"
            android:textColorHint="@color/hint"
            android:textColor="@color/black"
            android:padding="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration number"/>
        <EditText
            android:id="@+id/reqregno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/text_layout"
            android:textSize="18sp"
            android:hint="230970001"
            android:textColorHint="@color/hint"
            android:textColor="@color/black"
            android:padding="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cgpa"/>
        <EditText
            android:id="@+id/reqcgpa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/text_layout"
            android:textSize="18sp"
            android:hint="8.5"
            android:textColorHint="@color/hint"
            android:textColor="@color/black"
            android:padding="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinpos"
            android:spinnerMode="dropdown"
            android:background="@drawable/text_layout"
            android:textSize="18sp"
            android:layout_marginTop="8dp"

            android:textColor="@color/black"
            android:padding="12dp"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/submitreq"
            android:backgroundTint="@color/black"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>