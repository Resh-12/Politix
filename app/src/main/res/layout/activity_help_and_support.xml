<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PastRecords"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/helpaction"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/action"
        android:text="Help and Support"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:textSize="24sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        tools:ignore="MissingConstraints,MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/helpaction"
        android:layout_marginTop="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:id="@+id/contact"
                android:background="@drawable/layout_corner"
                android:backgroundTint="#E4E4F9"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Support"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:id="@+id/contactlayout"
                    android:background="@drawable/layout_corner">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/telephone1"
                        android:id="@+id/phoneimg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/numbertitle"
                        android:layout_marginTop="30dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/phoneimg"
                        android:layout_marginStart="20dp"
                        android:textSize="20sp"
                        android:text="Contact Number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/number"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/phoneimg"
                        android:layout_marginStart="20dp"
                        android:layout_below="@+id/numbertitle"
                        android:textSize="20sp"
                        android:text="+91 9902574384" />

                    <ImageView
                        android:id="@+id/mailimg"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_below="@+id/phoneimg"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/mail" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/mailtitle"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/mailimg"
                        android:layout_below="@+id/number"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="40dp"
                        android:textSize="20sp"
                        android:text="Email Address" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/mail"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/mailimg"
                        android:layout_marginStart="20dp"
                        android:layout_below="@+id/mailtitle"
                        android:textSize="20sp"
                        android:text="help@college.com" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:id="@+id/team_layout"
                android:background="@drawable/layout_corner"
                android:backgroundTint="#E4E4F9"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Our Team"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:id="@+id/team_layout_1"
                    android:background="@drawable/layout_corner">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:src="@drawable/userr"
                        android:id="@+id/teamimg1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/teamname1"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/teamimg1"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="20dp"
                        android:textSize="20sp"
                        android:text="Name: Arjun" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/teammail1"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/teamimg1"
                        android:layout_marginStart="20dp"
                        android:layout_below="@+id/teamname1"
                        android:textSize="20sp"
                        android:text="Email: arjun@gmail.com" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_below="@+id/teamimg1"
                        android:src="@drawable/userr"
                        android:id="@+id/teamimg2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/teamname2"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/teamimg2"
                        android:layout_below="@+id/teammail1"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="50dp"
                        android:textSize="20sp"
                        android:text="Name: Kiran" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/teammail2"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/teamimg2"
                        android:layout_marginStart="20dp"
                        android:layout_below="@+id/teamname2"
                        android:textSize="20sp"
                        android:text="Email: kiran@gmail.com" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_below="@+id/teamimg2"
                        android:src="@drawable/userr"
                        android:id="@+id/teamimg3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/teamname3"
                        android:layout_below="@+id/teammail2"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/teamimg3"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="50dp"
                        android:textSize="20sp"
                        android:text="Name: Suraj" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/teammail3"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/teamimg3"
                        android:layout_marginStart="20dp"
                        android:layout_below="@+id/teamname3"
                        android:textSize="20sp"
                        android:text="Email: suraj@gmail.com" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
